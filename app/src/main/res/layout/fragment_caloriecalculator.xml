<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/textViewToday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Today"
        android:textSize="24sp"
        android:textStyle="bold" />

    <!-- This will be a custom circular progress view, for simplicity we use ProgressBar -->
    <ProgressBar
        android:id="@+id/progressBarRemaining"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:indeterminate="false"
        android:max="100"
        android:progress="50" />

    <!-- Nutritional values -->
    <!-- A horizontal LinearLayout with TextViews for carbs, protein, and fat would go here -->
    <!-- ... -->

    <!-- Meal entries list - RecyclerView can be used instead of ListView for better performance -->
    <ListView
        android:id="@+id/listViewMeals"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Add meal button would go here -->
    <!-- ... -->

</LinearLayout>
