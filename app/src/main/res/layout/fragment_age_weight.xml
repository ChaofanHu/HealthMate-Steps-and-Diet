<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface"
    tools:context=".ui.UserDetails.UserDetailsFragment"
    android:paddingBottom="50dp">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?attr/colorSurface"

        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_back" />

        <TextView
            style="@style/ColoredText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginHorizontal="@dimen/boundary"
            android:layout_marginBottom="8dp"
            android:text="@string/what_s_your_age"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.MdcTypographyStyles.Headline4" />

        <TextView
            style="@style/grayText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_marginHorizontal="@dimen/boundary"
            android:layout_marginBottom="56dp"
            android:text="@string/this_would_help_you_find_the_perfect_sleep_limit_for_you"
            android:textAppearance="@style/TextAppearance.MdcTypographyStyles.Caption" />

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_margin="10dp"

            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radio_male"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Male"
                android:textColor="@color/lt_darkpblue"

                android:textSize="20dp"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/radio_female"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Female"
                android:textColor="@color/lt_darkpblue"
                android:textSize="20dp"
                android:textStyle="bold" />
        </RadioGroup>

        <TextView
            android:id="@+id/userAge"
            style="@style/ColoredText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_marginBottom="160dp"
            android:text="40 yrs"
            android:textAppearance="@style/TextAppearance.MdcTypographyStyles.Headline3" />

        <SeekBar
            android:id="@+id/simpleSeekBarForAge"
            android:layout_width="339dp"
            android:layout_height="23dp"
            android:layout_margin="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="38dp" />



        <TextView
            android:id="@+id/userWeight"
            style="@style/ColoredText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_marginBottom="160dp"
            android:text="60 kgs"
            android:textAppearance="@style/TextAppearance.MdcTypographyStyles.Headline3" />

        <SeekBar
            android:id="@+id/simpleSeekBarForWeight"
            android:layout_width="339dp"
            android:layout_height="23dp"
            android:layout_margin="10dp" />

        <TextView
            android:id="@+id/userHeight"
            style="@style/ColoredText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_marginBottom="160dp"
            android:text="160 cm"
            android:textAppearance="@style/TextAppearance.MdcTypographyStyles.Headline3" />

        <SeekBar
            android:id="@+id/simpleSeekBarForHeight"
            android:layout_width="339dp"
            android:layout_height="23dp"
            android:layout_margin="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="38dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/continueBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="60dp"
            android:layout_marginHorizontal="@dimen/boundary"
            android:layout_marginBottom="32dp"
            android:background="@drawable/rounded_primary_button"
            android:elevation="8dp"
            android:paddingVertical="16dp"
            android:text="Continue"
            android:textAppearance="@style/TextAppearance.MdcTypographyStyles.Button"
            android:textColor="?attr/colorOnSecondary" />


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>


